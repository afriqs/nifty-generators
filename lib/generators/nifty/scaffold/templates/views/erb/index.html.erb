<%% title t('<%= plural_name %>.list') %>

<h1><%%= yield :title %></h1>

<%- if action? :new -%>
<p><%%= link_to t('<%= plural_name %>.add'), <%= item_path :action => :new %>, :class => "admin_link" %></p>
<%- end -%>

<table>
  <tr>
  <%- for attribute in model_attributes -%>
    <th><%%= t('simple_form.labels.<%= singular_name %>.<%= attribute.name %>') %></th>
  <%- end -%>
  </tr>
  <%% for <%= instance_name %> in @<%= instances_name %> %>
    <tr>
    <%- for attribute in model_attributes -%>
      <td><%%= <%= instance_name %>.<%= attribute.name %> %></td>
    <%- end -%>
    <%- if action? :show -%>
      <td><%%= link_to t('general.show'), <%= item_path %> %></td>
    <%- end -%>
    <%- if action? :edit -%>
      <td><%%= link_to t('general.edit'), <%= item_path :action => :edit %> %></td>
    <%- end -%>
    <%- if action? :destroy -%>
      <td><%%= link_to t('general.destroy'), <%= item_path %>, :confirm => t('general.confirm'), :method => :delete %></td>
    <%- end -%>
    </tr>
  <%% end %>
</table>